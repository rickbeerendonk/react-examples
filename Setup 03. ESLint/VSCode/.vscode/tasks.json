{
  "version": "0.1.0",
  "command": "${workspaceRoot}/node_modules/.bin/webpack",
  "isShellCommand": true,
  "showOutput": "always",
	"args": [
		"--colors",
		"--progress",
    "--watch"
	],
	"echoCommand": true,
  "tasks": [
    {
      "args": ["-d"],
      "taskName": "webpack dev",
      "suppressTaskName": true,
      "isBuildCommand": true,
      "isWatching": true
    }
  ]
}
